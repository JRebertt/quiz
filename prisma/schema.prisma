// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id        String     @id @default(uuid())
  title     String
  slug      String     @unique
  welcome   Welcome?
  questions Question[]
  result    Result?
  theme     Theme?
  branding  Branding?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Welcome {
  id         String  @id @default(uuid())
  title      String
  content    String
  image      String?
  buttonText String
  quiz       Quiz    @relation(fields: [quizId], references: [id])
  quizId     String  @unique
}

model Question {
  id      String   @id @default(uuid())
  title   String
  image   String?
  options Option[]
  quiz    Quiz     @relation(fields: [quizId], references: [id])
  quizId  String
}

model Option {
  id         String   @id @default(uuid())
  label      String
  image      String?
  isCorrect  Boolean
  question   Question @relation(fields: [questionId], references: [id])
  questionId String
}

model Result {
  id         String @id @default(uuid())
  title      String
  message    String
  buttonText String
  buttonLink String
  quiz       Quiz   @relation(fields: [quizId], references: [id])
  quizId     String @unique
}

model Theme {
  id               String @id @default(uuid())
  primaryColor     String
  secondaryColor   String
  backgroundColor  String
  textColor        String
  buttonColor      String
  buttonTextColor  String
  progressBarColor String
  quiz             Quiz   @relation(fields: [quizId], references: [id])
  quizId           String @unique
}

model Branding {
  id     String @id @default(uuid())
  logo   String
  name   String
  quiz   Quiz   @relation(fields: [quizId], references: [id])
  quizId String @unique
}
